<h2>Sign up</h2>
<div id="Maxim">
  <div class="container" id="msform">
    <!--<form >-->


    <ul id="progressbar">
      <li class="active">Номер Телефона</li>
      <li>Персональные данные</li>
      <li>Потверждение</li>
      <li>Завершение</li>
    </ul>
    <%= form_for(resource, as: resource_name,  url: registration_path(resource_name)) do |f| %>
        <%= f.hidden_field :registration_type, value: 'Individual' %>
        <%= devise_error_messages! %>
        <fieldset>
          <h2 class="fs-title">Введите Номер Телефона</h2>

          <%= f.text_field :mobile, placeholder: "+" %>

          <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>

        <fieldset>
          <h2 class="fs-title">Введите </h2>
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
          <div>
          <%= f.fields_for :entity_attributes do |entity| %>
            <%= entity.label :first_name %><br />
            <%= entity.text_field :first_name %>
            <%= entity.label :last_name %><br />
            <%= entity.text_field :last_name %>
            <%= entity.label :inn %><br />
            <%= entity.text_field :inn %>
            <%= entity.label :dob %><br />
            <%= entity.text_field :dob %>
          <% end %>
          </div>


          <%= f.label :password %>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>


          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>


          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        </fieldset>


        <%= render "devise/shared/links" %>

    <% end %>
    <!--</form>-->
  </div>
</div>

