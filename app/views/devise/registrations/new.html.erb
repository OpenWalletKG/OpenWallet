          <input type="button" id="bot" name="otp" value="Отправить повторно" />
          <div class="actions">
          <%= client.submit "Sign up", class: "sign_up_btn"%>
          </div>
          <% end %>
  <% end %>
    </fieldset>
  </div>
</div>
</div>
